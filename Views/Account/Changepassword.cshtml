﻿﻿@using EasyGames.ViewModels;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">

        <h2 class="text-center mb-4">Change Password</h2>

        <!-- Form posts back to AccountController.ChangePassword -->
        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken() <!-- Prevents CSRF attacks -->

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email is read-only as it's already verified -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <!-- New password -->
            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm new password -->
            <div class="mb-3">
                <label asp-for="ConfirmNewPassword" class="form-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <!-- Change Password button -->
            <input type="submit" value="Submit" class="btn btn-success w-100 p-2" />


            <div class="text-center mt-2">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none mt-3">Back</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        // Validation scripts to check the form before sending to the server
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}