@model List<EasyGames.Services.CartItem>
@{
    ViewData["Title"] = "Your Cart";
}
<h2>Your Cart</h2>

@if (Model.Count == 0)
{
    <!-- Empty cart message -->
    <p>The cart is empty.</p>
}
else
{
    <!-- Cart Table -->
   <table class="table">

        <thead>
            <tr>
                <th>Item</th>
                <th>Qty</th>
                <th>Unit Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        <!-- Form to update quantity -->
                        <form asp-controller="Cart" asp-action="Update" method="post" class="d-flex gap-2">
                            <input type="hidden" name="id" value="@item.StockItemId" />
                            <input class="form-control" type="number" name="qty"
                                   value="@item.Quantity"
                                   min="1"
                                   max="@item.MaxAvailable" />
                            <button class="btn btn-primary btn-sm" type="submit">Update</button>
                        </form>

                        <small class="text-muted">Max available: @item.MaxAvailable</small>
                    </td>


                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.LineTotal.ToString("C")</td>
                    <td>
                        <!-- Form to remove item from cart -->
                        <form asp-controller="Cart" asp-action="Remove" method="post">
                            <input type="hidden" name="id" value="@item.StockItemId" />
                            <button class="btn btn-danger btn-sm" type="submit">Remove</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Total and Checkout button -->  
    <div class="d-flex justify-content-between align-items-center">
        <h4>Total: $@ViewBag.Total</h4>
        <form asp-action="Checkout" method="post">
            <button class="btn btn-success">Checkout</button>
        </form>
    </div>
}
